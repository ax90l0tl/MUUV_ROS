<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.5 0 0" rpy="0 -${pi/2} 0"/>
            <geometry>
                <cylinder length="1" radius="0.05"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.5 0 0" rpy="0 -${pi/2} 0"/>
            <geometry>
                <cylinder length="1" radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="1" radius="0.05">
            <origin xyz="0.5 0 0" rpy="0 -${pi/2} 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Thruster 0 -->

    <joint name="thruster_0_joint" type="fixed">
        <parent link="base_link"/>
        <child link="thruster_0"/>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="thruster_0">
        <visual>
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Thruster 1 -->

    <joint name="thruster_1_joint" type="fixed">
        <parent link="base_link"/>
        <child link="thruster_1"/>
        <origin xyz="0 -${0.1*cos(pi/6)} -0.05" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="thruster_1">
        <visual>
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Thruster 2 -->

    <joint name="thruster_2_joint" type="fixed">
        <parent link="base_link"/>
        <child link="thruster_2"/>
        <origin xyz="0 ${0.1*cos(pi/6)} -0.05" rpy="0 0ss 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="thruster_2">
        <visual>
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
        </xacro:inertial_cylinder>
    </link>


</robot>